{
  "opts": {
      "destination": "doc/",
      "recurse": true
  },

  "source": {
      "include": ["./src/components", "./src/data"],
      "includePattern": "\\.(jsx|js|ts|tsx)$",
      "excludePattern": "(node_modules/|doc)"
  },

  "plugins": [
      "plugins/markdown"
  ],

  "templates": {
      "cleverLinks": true,
      "monospaceLinks" : true
    }
}